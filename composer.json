{
    "name": "stylemix/laravel-base",
    "description": "Base components for Laravel applications",
    "authors": [
        {
            "name": "Azamat H",
            "email": "azamat@stylemix.net"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "spatie/laravel-query-builder": "^1.17",
        "plank/laravel-mediable": "^2.8"
    },
    "require-dev": {
        "orchestra/testbench": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Stylemix\\Base\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stylemix\\Base\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Stylemix\\Base\\ServiceProvider"
            ],
            "aliases": {
                "EntityForm": "Stylemix\\Base\\Facades\\EntityForm"
            }
        }
    }
}
